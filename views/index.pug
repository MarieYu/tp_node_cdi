extends layout

block content
  h1= title

  div(class='page')
    button#add-btn(class='btn' type='button')
      p= "Ajouter"

    div(class='container add-form')
      form(id='form-new' method='POST' action='')
        label= "Nom du produit"
        input(
          id='title'
          type='text'
          name='title'
        )
        br
        label= "Type"
        input(
          id='type-pizza'
          type='radio'
          name='type'
          value='pizza'
        )
        | Pizza
        input(
          id='type-pates'
          type='radio'
          name='type'
          value='pates'
        )
        | Pâtes
        br
        label= "Ingrédients"
        input(
          id='recipe'
          type='text'
          name='recipe'
          placeholder='saisir les ingrédients séparés par une virgule'
        )
        br
        label="Prix"
        input(
          id='price'
          type='decimal'
          name='price'
        )
        | €
        br
        input(
          id='valider'
          type='submit'
          value='Ajouter'
        )
  div(class= 'page', id= 'list')
    each result in values
      include new-element.pug